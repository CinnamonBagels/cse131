int fooRec;
int barRec = 5;
int foobazRec;

function : void bar()
{
  barRec++;

  if (barRec >= 8)
  {
    cout << "breaking out of bar recursive call" << endl;
    return;
  }
  
  cout << "recursive bar call " << barRec << endl;
  bar();
}


function : void main()
{
  fooRec = 1;
  foobazRec = 50;
  
  bar();
  
}
