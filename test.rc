  cout << "ST00: " << x << " " << y << endl;

  cout << "OP00: " << ++x << " " << ++y << endl;
  cout << "ST01: " << x << " " << y << endl;
  cout << "OP01: " << x++ << " " << y++ << endl;
  cout << "ST02: " << x << " " << y << endl;
  cout << "OP02: " << ++x << " " << y++ << endl;
  cout << "ST03: " << x << " " << y << endl;
  cout << "OP03: " << x++ << " " << ++y << endl;

  cout << "ST04: " << x << " " << y << endl;

  cout << "OP04: " << --x << " " << --y << endl;
  return;
}

